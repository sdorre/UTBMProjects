<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SettingsTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    </style>

    <style name="DrawerText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">@color/black_semi_transparent</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">3.0</item>
    </style>

    <style name="DrawerMapsTitle" parent="DrawerText">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="DrawerMapName">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TutorialText">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:shadowColor">@color/black_semi_transparent</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">3.0</item>
    </style>

</resources>
