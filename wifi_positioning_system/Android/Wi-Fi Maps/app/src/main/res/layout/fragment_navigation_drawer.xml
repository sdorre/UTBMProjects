<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/navigationdrawer_background_bitmap"
    android:id="@+id/scrollView">

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_weight="0"
        android:id="@+id/linearLayout2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_place_picker"
            android:layout_marginRight="10dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:id="@+id/textView2"
            style="@style/DrawerMapsTitle"
            android:layout_gravity="center" />

    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:columnCount="3"
        android:layout_marginTop="20dp">

        <TextView
            style="@style/DrawerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Current map"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="0"
            android:layout_row="0"
            android:layout_column="1" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@android:drawable/ic_dialog_map"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            style="@style/DrawerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="None"
            android:id="@+id/map_name"
            android:layout_gravity="center_horizontal|left"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp" />

        <TextView
            style="@style/DrawerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dimensions"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="0"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_view"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center_vertical" />

        <TextView
            style="@style/DrawerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Unkown"
            android:id="@+id/map_dimensions"
            android:layout_gravity="center_horizontal|left"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:textSize="14dp" />

    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_weight="0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_draweritem_selector"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/settings_button">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_nav_settings"
            android:layout_gravity="center"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/textView"
            android:layout_gravity="center"
            style="@style/DrawerText" />
    </LinearLayout>

</LinearLayout>
    </ScrollView>
